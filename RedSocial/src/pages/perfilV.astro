    text-shadow: 2px 2px 0 #000000, -2px -2px 0 #000000, 2px -2px 0 #000000, -2px 2px 0 #000000;
font-family: 'Roboto', sans-serif;
font-weight: 400 ;

  
  }
  
  .profile .followers-following {
    display: flex;
    justify-content: space-around;
    margin-top: 1em;
  }
  
  .profile .followers,
  .profile .following {
    width: 30%;
    padding: 1em;
    text-shadow: 2px 2px 0 #000000, -2px -2px 0 #000000, 2px -2px 0 #000000, -2px 2px 0 #000000;
    font-family: 'Roboto', sans-serif;
    font-weight: 400 ;
    border: 4px solid #3500D3;
    background: linear-gradient( #181818 20% , #313131 30%, #333232 35%, #4b4a4a 60%, #181818 80%  );
	
  }
  
  .profile .followers h2,
  .profile .following h2 {
    font-size: 1.5em;
    margin-bottom: 0.5em;
  }
  
  .profile .followers p,
  .profile .following p {
    font-size: 1.2em;
  }
  
  .profile .rectangles {
    display: flex;
    justify-content: space-around;
    margin-top: 1em;
  }
  
  .profile .rectangle {
    width: 30%;
    border: 4px solid #3500D3;
    padding: 1em;
    text-align: center;
    background: linear-gradient( #181818 20% , #313131 30%, #333232 35%, #4b4a4a 60%, #181818 80%  );
  }
  
  .profile .rectangle h2 {
    font-size: 1.5em;
    margin-bottom: 0.5em;
  }
  
  .profile .rectangle p {
    font-size: 1.2em;
  }

  .playimg{
    width: 25%;
    height: 25%;
  }
  
  .start{
    display: flex;
  }
  .follow {
color: #7362a7 ;
